<%= notice %>
<h1><%= @post.title %></h1>

<div><%= simple_format @post.body %></div>

<ul>
  <li><%= link_to "edit", edit_post_path(@post) %></li>
  <li><%= link_to "destroy", @post, :method => :delete, :confirm => "Are you sure?" %></li>
</ul>

<h2>Tags: </h2>
<%= @post.tags.map {|t| t.name}.join(", ") %>
<br/>
<%= render @post.comments %>

 	<h3>Add a comment</h3>
	<%= render "comments/form" %>
<p><%= link_to "back to posts", posts_path %></p>
